@model Pitstop.WebApp.ViewModels.VehicleManagementDetailsViewModel
@{
    ViewData["Title"] = "Vehicle Details";
}

<div class="flex justify-between items-center pt-3 pb-2 mb-4 border-b border-gray-200">
    <h1 class="text-2xl font-semibold text-gray-800">Vehicle Details</h1>
    <a id="BackButton" asp-action="Index" asp-controller="VehicleManagement" class="bg-gray-200 hover:bg-gray-300 text-gray-700 font-bold py-2 px-4 rounded-lg transition duration-300 flex items-center">
        <i class="fas fa-arrow-left mr-2"></i> Back to Overview
    </a>
</div>

<div class="bg-white shadow-md rounded-lg p-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8">
        <div>
            <h3 class="text-lg font-semibold text-gray-800 border-b pb-2 mb-3 flex items-center">
                <i class="fas fa-car text-primary-600 mr-3"></i> Vehicle Information
            </h3>
            <dl class="space-y-2">
                <div class="flex">
                    <dt class="w-1/3 text-sm font-medium text-gray-500">License Plate</dt>
                    <dd class="w-2/3 text-sm text-gray-900 font-semibold font-mono">@Model.Vehicle.LicenseNumber</dd>
                </div>
                <div class="flex">
                    <dt class="w-1/3 text-sm font-medium text-gray-500">Brand</dt>
                    <dd class="w-2/3 text-sm text-gray-900">@Model.Vehicle.Brand</dd>
                </div>
                <div class="flex">
                    <dt class="w-1/3 text-sm font-medium text-gray-500">Type</dt>
                    <dd class="w-2/3 text-sm text-gray-900">@Model.Vehicle.Type</dd>
                </div>
            </dl>
        </div>
        <div>
            <h3 class="text-lg font-semibold text-gray-800 border-b pb-2 mb-3 flex items-center">
                <i class="fas fa-user text-primary-600 mr-3"></i> Owner Information
            </h3>
            <dl class="space-y-2">
                <div class="flex">
                    <dt class="w-1/3 text-sm font-medium text-gray-500">Owner</dt>
                    <dd class="w-2/3 text-sm text-primary-600 font-semibold hover:underline">
                        <a href='@(Url.Action("Details", "CustomerManagement", new { id = Model.Vehicle.OwnerId }))'>@Model.Owner</a>
                    </dd>
                </div>
            </dl>
        </div>
    </div>
</div>