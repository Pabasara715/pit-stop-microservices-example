@model Pitstop.WebApp.ViewModels.VehicleManagementNewViewModel
@{
    ViewData["Title"] = "Register Vehicle";
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

<div class="flex justify-between items-center pt-3 pb-2 mb-4 border-b border-gray-200">
    <h1 class="text-2xl font-semibold text-gray-800">Register New Vehicle</h1>
</div>

<div class="max-w-2xl mx-auto bg-white shadow-md rounded-lg p-6">
    <form asp-controller="VehicleManagement" asp-action="Register" method="post">
        <div class="space-y-6">
            <div>
                <label asp-for="Vehicle.LicenseNumber" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Vehicle.LicenseNumber" type="text" class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-primary-500 focus:border-primary-500" />
                <span asp-validation-for="Vehicle.LicenseNumber" class="text-sm text-red-600"></span>
            </div>

            <div>
                <label asp-for="Vehicle.Brand" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Vehicle.Brand" type="text" class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-primary-500 focus:border-primary-500" />
                <span asp-validation-for="Vehicle.Brand" class="text-sm text-red-600"></span>
            </div>

            <div>
                <label asp-for="Vehicle.Type" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Vehicle.Type" type="text" class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-primary-500 focus:border-primary-500" />
                <span asp-validation-for="Vehicle.Type" class="text-sm text-red-600"></span>
            </div>

            <div>
                <label asp-for="Vehicle.OwnerId" class="block text-sm font-medium text-gray-700">Owner</label>
                <select asp-for="SelectedCustomerId" asp-items="Model.Customers" class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary-500 focus:border-primary-500">
                    <option value="">-- select a customer --</option>
                </select>
                <span asp-validation-for="SelectedCustomerId" class="text-sm text-red-600"></span>
            </div>
        </div>

        <div class="mt-8 pt-5 border-t border-gray-200">
            <div class="flex justify-end space-x-3">
                <a id="CancelButton" asp-action="Index" asp-controller="VehicleManagement" class="bg-white hover:bg-gray-100 text-gray-700 font-bold py-2 px-4 rounded-lg border border-gray-300 transition duration-300">
                    Cancel
                </a>
                <button id="SubmitButton" type="submit" class="bg-primary-600 hover:bg-primary-700 text-white font-bold py-2 px-4 rounded-lg transition duration-300">
                    Register Vehicle
                </button>
            </div>
        </div>
    </form>
</div>