@model Pitstop.WebApp.ViewModels.VehicleManagementViewModel
@{
    ViewData["Title"] = "Vehicles Overview";
}

<div class="flex justify-between items-center pt-3 pb-2 mb-4 border-b border-gray-200">
    <h1 class="text-2xl font-semibold text-gray-800">Vehicle Management</h1>
    <a id="RegisterVehicleButton" asp-action="New" asp-controller="VehicleManagement" class="bg-primary-600 hover:bg-primary-700 text-white font-bold py-2 px-4 rounded-lg transition duration-300 flex items-center">
        <i class="fas fa-plus mr-2"></i> Register Vehicle
    </a>
</div>

<div class="bg-white shadow-md rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
            <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">License No.</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Brand</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
            @if (Model.Vehicles == null || !Model.Vehicles.Any())
            {
                <tr>
                    <td colspan="3" class="px-6 py-4 text-center text-gray-500">No vehicles found. Click 'Register Vehicle' to add one.</td>
                </tr>
            }
            else
            {
                @foreach (var vehicle in Model.Vehicles)
                {
                    <tr class="hover:bg-gray-50 cursor-pointer" onclick="location.href = '@(Url.Action("Details", "VehicleManagement", new { licenseNumber = vehicle.LicenseNumber }))'">
                        <td class="px-6 py-4 whitespace-nowrap font-mono text-gray-700">@vehicle.LicenseNumber</td>
                        <td class="px-6 py-4 whitespace-nowrap">@vehicle.Brand</td>
                        <td class="px-6 py-4 whitespace-nowrap">@vehicle.Type</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>