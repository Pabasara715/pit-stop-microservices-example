@model Pitstop.WebApp.ViewModels.WorkshopManagementFinishViewModel
@{
    ViewData["Title"] = "Finish Maintenance Job";
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

<div class="flex justify-between items-center pt-3 pb-2 mb-4 border-b border-gray-200">
    <h1 class="text-2xl font-semibold text-gray-800">Finish Maintenance Job</h1>
</div>

<div class="max-w-2xl mx-auto bg-white shadow-md rounded-lg p-6">
    <form asp-controller="WorkshopManagement" asp-action="FinishMaintenanceJob" method="post">
        <div class="space-y-6">
            <div>
                <label asp-for="ActualStartTime" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="ActualStartTime" type="text" class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-primary-500 focus:border-primary-500" />
                <span asp-validation-for="ActualStartTime" class="text-sm text-red-600"></span>
            </div>

            <div>
                <label asp-for="ActualEndTime" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="ActualEndTime" type="text" class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-primary-500 focus:border-primary-500" />
                <span asp-validation-for="ActualEndTime" class="text-sm text-red-600"></span>
            </div>

            <div>
                <label asp-for="Notes" class="block text-sm font-medium text-gray-700">Mechanic Notes</label>
                <textarea asp-for="Notes" rows="4" class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-primary-500 focus:border-primary-500"></textarea>
                <span asp-validation-for="Notes" class="text-sm text-red-600"></span>
            </div>
        </div>

        <input asp-for="Date" type="hidden" />
        <input asp-for="Id" type="hidden" />

        <div class="mt-8 pt-5 border-t border-gray-200">
            <div class="flex justify-end space-x-3">
                <a id="BackButton" asp-action="Details" asp-controller="WorkshopManagement" asp-route-planningDate="@Model.Date.ToString("yyyy-MM-dd")" asp-route-jobId="@Model.Id" class="bg-white hover:bg-gray-100 text-gray-700 font-bold py-2 px-4 rounded-lg border border-gray-300 transition duration-300">
                    Cancel
                </a>
                <button id="CompleteButton" type="submit" class="bg-primary-600 hover:bg-primary-700 text-white font-bold py-2 px-4 rounded-lg transition duration-300">
                    Complete Job
                </button>
            </div>
        </div>
    </form>
</div>