@model Pitstop.WebApp.ViewModels.CustomerManagementNewViewModel
@{
    ViewData["Title"] = "Register Customer";
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

<div class="flex justify-between items-center pt-3 pb-2 mb-4 border-b border-gray-200">
    <h1 class="text-2xl font-semibold text-gray-800">Register New Customer</h1>
</div>

<div class="max-w-4xl mx-auto bg-white shadow-md rounded-lg p-6">
    <form asp-controller="CustomerManagement" asp-action="Register" method="post">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label asp-for="Customer.Name" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Customer.Name" type="text" class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-primary-500 focus:border-primary-500" />
                <span asp-validation-for="Customer.Name" class="text-sm text-red-600"></span>
            </div>

            <div>
                <label asp-for="Customer.City" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Customer.City" type="text" class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-primary-500 focus:border-primary-500" />
                <span asp-validation-for="Customer.City" class="text-sm text-red-600"></span>
            </div>

            <div class="md:col-span-2">
                <label asp-for="Customer.Address" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Customer.Address" type="text" class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-primary-500 focus:border-primary-500" />
                <span asp-validation-for="Customer.Address" class="text-sm text-red-600"></span>
            </div>

            <div>
                <label asp-for="Customer.PostalCode" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Customer.PostalCode" type="text" class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-primary-500 focus:border-primary-500" />
                <span asp-validation-for="Customer.PostalCode" class="text-sm text-red-600"></span>
            </div>
            
            <div>
                <label asp-for="Customer.TelephoneNumber" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Customer.TelephoneNumber" type="text" class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-primary-500 focus:border-primary-500" />
                <span asp-validation-for="Customer.TelephoneNumber" class="text-sm text-red-600"></span>
            </div>

            <div class="md:col-span-2">
                <label asp-for="Customer.EmailAddress" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Customer.EmailAddress" type="text" class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-primary-500 focus:border-primary-500" />
                <span asp-validation-for="Customer.EmailAddress" class="text-sm text-red-600"></span>
            </div>
        </div>

        <div class="mt-8 pt-5 border-t border-gray-200">
            <div class="flex justify-end space-x-3">
                <a id="CancelButton" asp-action="Index" asp-controller="CustomerManagement" class="bg-white hover:bg-gray-100 text-gray-700 font-bold py-2 px-4 rounded-lg border border-gray-300 transition duration-300">
                    Cancel
                </a>
                <button id="SubmitButton" type="submit" class="bg-primary-600 hover:bg-primary-700 text-white font-bold py-2 px-4 rounded-lg transition duration-300">
                    Register Customer
                </button>
            </div>
        </div>
    </form>
</div>