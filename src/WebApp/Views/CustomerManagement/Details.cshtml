@model Pitstop.WebApp.ViewModels.CustomerManagementDetailsViewModel
@{
    ViewData["Title"] = "Customer Details";
}

<div class="flex justify-between items-center pt-3 pb-2 mb-4 border-b border-gray-200">
    <h1 class="text-2xl font-semibold text-gray-800">Customer Details</h1>
    <a id="BackButton" asp-action="Index" asp-controller="CustomerManagement" class="bg-gray-200 hover:bg-gray-300 text-gray-700 font-bold py-2 px-4 rounded-lg transition duration-300 flex items-center">
        <i class="fas fa-arrow-left mr-2"></i> Back to Overview
    </a>
</div>

<div class="bg-white shadow-md rounded-lg p-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-4">
        <div>
            <h3 class="text-lg font-semibold text-gray-800 border-b pb-2 mb-3">Personal Information</h3>
            <dl class="space-y-2">
                <div class="flex">
                    <dt class="w-1/3 text-sm font-medium text-gray-500">Name</dt>
                    <dd class="w-2/3 text-sm text-gray-900 font-semibold">@Model.Customer.Name</dd>
                </div>
                <div class="flex">
                    <dt class="w-1/3 text-sm font-medium text-gray-500">City</dt>
                    <dd class="w-2/3 text-sm text-gray-900">@Model.Customer.City</dd>
                </div>
                <div class="flex">
                    <dt class="w-1/3 text-sm font-medium text-gray-500">Address</dt>
                    <dd class="w-2/3 text-sm text-gray-900">@Model.Customer.Address</dd>
                </div>
                <div class="flex">
                    <dt class="w-1/3 text-sm font-medium text-gray-500">Postal Code</dt>
                    <dd class="w-2/3 text-sm text-gray-900 font-mono">@Model.Customer.PostalCode</dd>
                </div>
            </dl>
        </div>
        <div>
            <h3 class="text-lg font-semibold text-gray-800 border-b pb-2 mb-3">Contact Details</h3>
            <dl class="space-y-2">
                <div class="flex">
                    <dt class="w-1/3 text-sm font-medium text-gray-500">Telephone</dt>
                    <dd class="w-2/3 text-sm text-gray-900">@Model.Customer.TelephoneNumber</dd>
                </div>
                <div class="flex">
                    <dt class="w-1/3 text-sm font-medium text-gray-500">Email</dt>
                    <dd class="w-2/3 text-sm text-gray-900 text-primary-600 hover:underline">
                        <a href="mailto:@Model.Customer.EmailAddress">@Model.Customer.EmailAddress</a>
                    </dd>
                </div>
                @if (Model.Customer.LoyaltyLevel.HasValue)
                {
                    string imagePath = $"/images/{Model.Customer.LoyaltyLevel}.png";
                    <div class="flex items-center">
                        <dt class="w-1/3 text-sm font-medium text-gray-500">Loyalty Level</dt>
                        <dd class="w-2/3 text-sm text-gray-900"><img src="@imagePath" alt="Loyalty Level" class="h-8"/></dd>
                    </div>
                }
            </dl>
        </div>
    </div>
</div>