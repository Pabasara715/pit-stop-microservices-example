@{
    ViewData["Title"] = "About Pitstop";
}

<!-- About Hero Section -->
<section class="bg-gradient-to-r from-primary-700 to-primary-600 py-12 text-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl font-bold mb-4">About Pitstop</h1>
        <p class="text-xl max-w-3xl mx-auto">Revolutionizing garage management with modern web-scale architecture</p>
    </div>
</section>

<!-- Main Content -->
<section class="py-12 bg-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            <!-- Left Column - Image -->
            <div>
                <img src="https://images.unsplash.com/photo-1581091226033-d5c48150dbaa?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1000&q=80"
                    alt="Modern automotive workshop" class="rounded-lg shadow-lg">
            </div>

            <!-- Right Column - Content -->
            <div>
                <div class="mb-8">
                    <h2 class="text-2xl font-bold text-gray-800 mb-4">Our Mission</h2>
                    <p class="text-gray-600 mb-4">Pitstop is a comprehensive garage management system designed to
                        streamline operations for automotive workshops of all sizes.</p>
                    <p class="text-gray-600">This sample application demonstrates modern web-scale architecture concepts
                        including Microservices, CQRS, Event Sourcing, Domain-Driven Design, and NoSQL databases.</p>
                </div>

                <!-- Version Info -->
                <div class="bg-gray-50 p-6 rounded-lg border border-gray-200">
                    <h3 class="text-lg font-semibold text-gray-800 mb-2">Version Information</h3>
                    <p class="text-gray-600">Version: @System.Reflection.Assembly.GetEntryAssembly().GetName().Version
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="py-12 bg-gray-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-gray-800 mb-4">Key Features</h2>
            <p class="text-gray-600 max-w-3xl mx-auto">Pitstop provides all the tools you need to efficiently manage
                your automotive workshop</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
                <div class="bg-primary-100 p-3 rounded-full inline-block mb-4">
                    <i class="fas fa-users text-primary-600 text-xl"></i>
                </div>
                <h3 class="text-xl font-semibold text-gray-800 mb-2">Customer Management</h3>
                <p class="text-gray-600">Track customer information, service history, and communication all in one
                    place.</p>
            </div>

            <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
                <div class="bg-primary-100 p-3 rounded-full inline-block mb-4">
                    <i class="fas fa-car text-primary-600 text-xl"></i>
                </div>
                <h3 class="text-xl font-semibold text-gray-800 mb-2">Vehicle Management</h3>
                <p class="text-gray-600">Maintain detailed records of vehicles, service schedules, and maintenance
                    history.</p>
            </div>

            <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
                <div class="bg-primary-100 p-3 rounded-full inline-block mb-4">
                    <i class="fas fa-tools text-primary-600 text-xl"></i>
                </div>
                <h3 class="text-xl font-semibold text-gray-800 mb-2">Workshop Management</h3>
                <p class="text-gray-600">Schedule appointments, manage inventory, and track technician assignments.</p>
            </div>

            <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
                <div class="bg-primary-100 p-3 rounded-full inline-block mb-4">
                    <i class="fas fa-file-invoice-dollar text-primary-600 text-xl"></i>
                </div>
                <h3 class="text-xl font-semibold text-gray-800 mb-2">Invoicing</h3>
                <p class="text-gray-600">Generate professional invoices, track payments, and manage financial records.
                </p>
            </div>

            <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
                <div class="bg-primary-100 p-3 rounded-full inline-block mb-4">
                    <i class="fas fa-bell text-primary-600 text-xl"></i>
                </div>
                <h3 class="text-xl font-semibold text-gray-800 mb-2">Customer Notifications</h3>
                <p class="text-gray-600">Automated reminders for upcoming services and appointments to keep customers
                    engaged.</p>
            </div>

            <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
                <div class="bg-primary-100 p-3 rounded-full inline-block mb-4">
                    <i class="fas fa-chart-bar text-primary-600 text-xl"></i>
                </div>
                <h3 class="text-xl font-semibold text-gray-800 mb-2">Reporting & Analytics</h3>
                <p class="text-gray-600">Gain insights with comprehensive reports on performance, revenue, and customer
                    trends.</p>
            </div>
        </div>
    </div>
</section>


<!-- CTA Section -->
<section class="py-12 bg-primary-700 text-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold mb-4">Experience Modern Garage Management</h2>
        <p class="text-xl mb-8 max-w-3xl mx-auto">Join the growing community of automotive professionals using Pitstop
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
            <a asp-controller="Home" asp-action="Index"
                class="bg-white hover:bg-gray-100 text-primary-700 font-semibold py-3 px-8 rounded-lg transition duration-300">
                Explore Features
            </a>
            <a href="#"
                class="border-2 border-white hover:bg-primary-600 font-semibold py-3 px-8 rounded-lg transition duration-300">
                Contact Us
            </a>
        </div>
    </div>
</section>

<!-- Version Footer -->
<section class="py-6 bg-gray-100">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <p class="text-gray-600">Pitstop Garage Management System - Version:
            @System.Reflection.Assembly.GetEntryAssembly().GetName().Version</p>
    </div>
</section>
