@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pitstop</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: {
                            50: '#f0f9ff',
                            100: '#e0f2fe',
                            200: '#bae6fd',
                            300: '#7dd3fc',
                            400: '#38bdf8',
                            500: '#0ea5e9',
                            600: '#0284c7',
                            700: '#0369a1',
                            800: '#075985',
                            900: '#0c4a6e',
                        }
                    }
                }
            }
        }
    </script>

    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');

        body {
            font-family: 'Inter', sans-serif;
        }

        .hero-section {
            background: linear-gradient(rgba(3, 105, 161, 0.8), rgba(7, 89, 133, 0.9)), url('https://images.unsplash.com/photo-1492144534655-ae79c964c9d7?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2000&q=80');
            background-size: cover;
            background-position: center;
        }

        .feature-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .feature-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1);
        }

        .stat-card {
            background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
            border-left: 4px solid #0284c7;
        }
    </style>
</head>



<section class="hero-section py-12 md:py-16 text-white">
    <div class="mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-3xl md:text-4xl font-bold mb-4">Pitstop Garage Management System</h1>
        <p class="text-lg md:text-xl mb-8 max-w-3xl mx-auto">Streamline your automotive workshop with our comprehensive
            management solution</p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
            <a asp-controller="CustomerManagement" asp-action="Index"
                class="bg-primary-500 hover:bg-primary-600 text-white font-semibold py-2 px-4 rounded-lg transition duration-300 transform hover:-translate-y-1 inline-block text-center">
                Get Started <i class="ml-2 fas fa-arrow-right"></i>
            </a>
            <button
                class="bg-white hover:bg-gray-100 text-primary-600 font-semibold py-2 px-4 rounded-lg transition duration-300">
                <i class="mr-2 fas fa-play-circle"></i> Watch Demo
            </button>
        </div>
    </div>
</section>
<!-- Stats Section -->
<section class="py-8 bg-white">
    <div class="mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div class="stat-card p-4 rounded-lg shadow-sm">
                <div class="flex items-center">
                    <div class="bg-primary-100 p-2 rounded-full">
                        <i class="fas fa-car text-primary-600 text-xl"></i>
                    </div>
                    <div class="ml-3">
                        <h3 class="text-xl font-bold text-gray-800">1,250+</h3>
                        <p class="text-gray-600 text-sm">Vehicles Serviced</p>
                    </div>
                </div>
            </div>
            <div class="stat-card p-4 rounded-lg shadow-sm">
                <div class="flex items-center">
                    <div class="bg-primary-100 p-2 rounded-full">
                        <i class="fas fa-users text-primary-600 text-xl"></i>
                    </div>
                    <div class="ml-3">
                        <h3 class="text-xl font-bold text-gray-800">850+</h3>
                        <p class="text-gray-600 text-sm">Satisfied Customers</p>
                    </div>
                </div>
            </div>
            <div class="stat-card p-4 rounded-lg shadow-sm">
                <div class="flex items-center">
                    <div class="bg-primary-100 p-2 rounded-full">
                        <i class="fas fa-wrench text-primary-600 text-xl"></i>
                    </div>
                    <div class="ml-3">
                        <h3 class="text-xl font-bold text-gray-800">98%</h3>
                        <p class="text-gray-600 text-sm">Service Efficiency</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="py-12 bg-gray-50">
    <div class="mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-8">
            <h2 class="text-2xl font-bold text-gray-800 mb-3">Complete Workshop Management</h2>
            <p class="text-gray-600 max-w-3xl mx-auto">Our system provides all the tools you need to efficiently manage
                your automotive workshop!</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <div class="feature-card bg-white p-4 rounded-lg shadow-md">
                <div class="bg-primary-100 p-2 rounded-full inline-block mb-3">
                    <i class="fas fa-user-friends text-primary-600 text-xl"></i>
                </div>
                <h3 class="text-lg font-semibold text-gray-800 mb-2">Customer Management</h3>
                <p class="text-gray-600 text-sm">Track customer information, service history, and communication all in
                    one place.</p>
            </div>

            <div class="feature-card bg-white p-4 rounded-lg shadow-md">
                <div class="bg-primary-100 p-2 rounded-full inline-block mb-3">
                    <i class="fas fa-car text-primary-600 text-xl"></i>
                </div>
                <h3 class="text-lg font-semibold text-gray-800 mb-2">Vehicle Management</h3>
                <p class="text-gray-600 text-sm">Maintain detailed records of vehicles, service schedules, and
                    maintenance history.</p>
            </div>

            <div class="feature-card bg-white p-4 rounded-lg shadow-md">
                <div class="bg-primary-100 p-2 rounded-full inline-block mb-3">
                    <i class="fas fa-tools text-primary-600 text-xl"></i>
                </div>
                <h3 class="text-lg font-semibold text-gray-800 mb-2">Workshop Management</h3>
                <p class="text-gray-600 text-sm">Schedule appointments, manage inventory, and track technician
                    assignments.</p>
            </div>

            <div class="feature-card bg-white p-4 rounded-lg shadow-md">
                <div class="bg-primary-100 p-2 rounded-full inline-block mb-3">
                    <i class="fas fa-file-invoice text-primary-600 text-xl"></i>
                </div>
                <h3 class="text-lg font-semibold text-gray-800 mb-2">Billing & Invoicing</h3>
                <p class="text-gray-600 text-sm">Generate professional invoices, track payments, and manage financial
                    records.</p>
            </div>

            <div class="feature-card bg-white p-4 rounded-lg shadow-md">
                <div class="bg-primary-100 p-2 rounded-full inline-block mb-3">
                    <i class="fas fa-chart-line text-primary-600 text-xl"></i>
                </div>
                <h3 class="text-lg font-semibold text-gray-800 mb-2">Reporting & Analytics</h3>
                <p class="text-gray-600 text-sm">Gain insights with comprehensive reports on performance, revenue, and
                    customer trends.</p>
            </div>

            <div class="feature-card bg-white p-4 rounded-lg shadow-md">
                <div class="bg-primary-100 p-2 rounded-full inline-block mb-3">
                    <i class="fas fa-bell text-primary-600 text-xl"></i>
                </div>
                <h3 class="text-lg font-semibold text-gray-800 mb-2">Reminders & Notifications</h3>
                <p class="text-gray-600 text-sm">Automated reminders for upcoming services and appointments to keep
                    customers engaged.</p>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="py-12 bg-primary-700 text-white">
    <div class="mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-2xl font-bold mb-3">Ready to Transform Your Workshop?</h2>
        <p class="text-lg mb-6 max-w-3xl mx-auto">Join thousands of automotive professionals who use Pitstop to
            streamline their operations</p>
        <div class="flex flex-col sm:flex-row justify-center gap-3">
            <a asp-controller="CustomerManagement" asp-action="Index"
                class="bg-white hover:bg-gray-100 text-primary-700 font-semibold py-2 px-6 rounded-lg transition duration-300 text-center">
                Start Free Trial
            </a>
            <button
                class="border-2 border-white hover:bg-primary-600 font-semibold py-2 px-6 rounded-lg transition duration-300">
                Contact Sales
            </button>
        </div>
    </div>
</section>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const currentPage = window.location.pathname;
        const navLinks = document.querySelectorAll('.nav-link');

        navLinks.forEach(link => {
            if (link.getAttribute('href') === currentPage) {
                link.classList.add('active');
                link.classList.remove('text-gray-300');
                link.classList.add('text-white');
            }
        });
    });
</script>


</html>
